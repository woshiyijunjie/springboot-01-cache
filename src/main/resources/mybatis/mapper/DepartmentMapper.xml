<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.junjie.cache.mapper.DepartmentMapper">

    <!--根据 id 查询 department-->
    <select id="getDepartmentById" parameterType="java.lang.Integer" resultType="com.junjie.cache.bean.Department">
        SELECT * FROM department WHERE id = #{id}
    </select>

</mapper>